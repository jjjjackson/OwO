{
  "$schema": "https://raw.githubusercontent.com/RawToast/OwO/refs/heads/master/packages/pr-review/schema.json",
  "version": 1,
  "reviewers": [
    {
      "name": "comprehensive",
      "promptFile": ".github/reviewers/comprehensive.md",
      "focus": "code quality, security, and best practices",
      "model": "nano-gpt/minimax/minimax-m2.1",
      "temperature": 0.1,
      "enabled": false
    }
  ],
  "verifier": {
    "model": "nano-gpt/zai-org/glm-4.7:thinking",
    "temperature": 0.1,
    "enabled": true,
    "level": "warning",
    "diagrams": true
  },
  "defaults": {
    "model": "nano-gpt/zai-org/glm-4.7"
  }
}
