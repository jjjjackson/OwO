{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/RawToast/owo/main/packages/pr-review/schema.json",
  "title": "PR Review Configuration",
  "description": "Configuration schema for @owo/pr-review",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "version": {
      "default": 1,
      "type": "number",
      "const": 1
    },
    "reviewers": {
      "default": [],
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Reviewer identifier (e.g., 'security', 'quality')"
          },
          "prompt": {
            "description": "Inline prompt text (alternative to promptFile)",
            "type": "string"
          },
          "promptFile": {
            "description": "Path to prompt file relative to repo root",
            "type": "string"
          },
          "focus": {
            "description": "Short focus description",
            "type": "string"
          },
          "model": {
            "description": "Model override for this reviewer",
            "type": "string",
            "pattern": "^[^/]+\\/[^/]+(?:\\/[^/]+)*$"
          },
          "temperature": {
            "description": "Temperature for sampling (0=deterministic, 2=creative). Recommended: 0.1 for reviews",
            "type": "number",
            "minimum": 0,
            "maximum": 2
          },
          "enabled": {
            "default": true,
            "type": "boolean"
          }
        },
        "required": ["name", "enabled"],
        "additionalProperties": false
      }
    },
    "verifier": {
      "type": "object",
      "properties": {
        "prompt": {
          "type": "string"
        },
        "promptFile": {
          "type": "string"
        },
        "model": {
          "type": "string",
          "pattern": "^[^/]+\\/[^/]+(?:\\/[^/]+)*$"
        },
        "temperature": {
          "description": "Temperature for sampling (0=deterministic, 2=creative). Recommended: 0.1 for reviews",
          "type": "number",
          "minimum": 0,
          "maximum": 2
        },
        "enabled": {
          "default": true,
          "type": "boolean"
        },
        "level": {
          "default": "info",
          "description": "Minimum severity level to include in final review (critical=only critical, warning=critical+warning, info=all)",
          "type": "string",
          "enum": ["critical", "warning", "info"]
        },
        "diagrams": {
          "default": true,
          "description": "Generate mermaid diagrams in the review",
          "type": "boolean"
        }
      },
      "required": ["enabled", "level", "diagrams"],
      "additionalProperties": false
    },
    "resolution": {
      "type": "object",
      "properties": {
        "enabled": {
          "default": true,
          "description": "Enable/disable resolution checking",
          "type": "boolean"
        },
        "trigger": {
          "default": "first-push",
          "description": "When to run resolution checks",
          "type": "string",
          "enum": ["first-push", "all-pushes", "on-request"]
        },
        "model": {
          "description": "Model for resolution agent (recommend cheap/fast like Haiku)",
          "type": "string",
          "pattern": "^[^/]+\\/[^/]+(?:\\/[^/]+)*$"
        },
        "temperature": {
          "description": "Temperature for sampling (0=deterministic, 2=creative). Recommended: 0.1 for reviews",
          "type": "number",
          "minimum": 0,
          "maximum": 2
        },
        "prompt": {
          "description": "Custom resolution prompt",
          "type": "string"
        },
        "promptFile": {
          "description": "Path to custom prompt file",
          "type": "string"
        }
      },
      "required": ["enabled", "trigger"],
      "additionalProperties": false
    },
    "context": {
      "type": "object",
      "properties": {
        "enabled": {
          "default": true,
          "description": "Enable full file context for reviewers",
          "type": "boolean"
        },
        "maxFileSizeKb": {
          "default": 100,
          "description": "Maximum file size to include (KB)",
          "type": "number",
          "minimum": 1,
          "maximum": 1000
        },
        "maxTotalSizeKb": {
          "default": 500,
          "description": "Maximum total context size (KB)",
          "type": "number",
          "minimum": 10,
          "maximum": 5000
        },
        "include": {
          "type": "object",
          "properties": {
            "changedFiles": {
              "default": true,
              "description": "Include full content of changed files",
              "type": "boolean"
            }
          },
          "required": ["changedFiles"],
          "additionalProperties": false
        }
      },
      "required": ["enabled", "maxFileSizeKb", "maxTotalSizeKb"],
      "additionalProperties": false
    },
    "defaults": {
      "type": "object",
      "properties": {
        "model": {
          "type": "string",
          "pattern": "^[^/]+\\/[^/]+(?:\\/[^/]+)*$"
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["version", "reviewers"],
  "additionalProperties": false
}
