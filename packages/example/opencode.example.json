{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "<where-this-project-is>/packages/code-review/dist/code-review.js",
    "<where-this-project-is>/packages/keyword-detector/dist/keyword-detector.js",
    "<where-this-project-is>/packages/orchestration/dist/orchestration.js",
    "<where-this-project-is>/packages/prompt-injector/dist/prompt-injector.js",
  ],
  "default_agent": "owO",
  "autoupdate": true,
  "agent": {
    "plan": {
      "disable": true,
    },
    "build": {
      "model": "openai/gpt-5.2-codex",
      "permission": {
        "skill": {
          "using-superpowers": "deny",
          "brainstorming": "deny",
          "subagent-driven-development": "deny",
          "writing-plans": "deny",
          "finishing-a-development-branch": "deny",
          "executing-plans": "deny",
          "verification-before-completion": "deny",
        }
      },
    },
    "owO": {
      "description": "Main agent co-ordinator",
      "mode": "primary",
      "model": "opencode/claude-opus-4-5",
      "temperature": 0.1,
      "tools": {
        "write": true,
        "edit": true,
        "task": true,
        "read": true,
        "glob": true,
        "grep": false,
        "list": true,
        "grep_app_*": false,
        "Ripgrep": false,
        "lsp": true,
        "todo-write": true,
      },
    },
    "ask": {
      "temperature": 0.1,
      "permission": {
        "write": "deny",
        "edit": "deny",
        "task": "deny",
        "skill": {
          "subagent-driven-development": "deny",
          "writing-plans": "deny",
          "finishing-a-development-branch": "deny",
          "executing-plans": "deny",
          "verification-before-completion": "deny",
        }
      },
    },
    "explore": {
      "mode": "subagent",
      "model": "opencode/glm-4.7",
      "temperature": 0.1,
      "permission": {
        "write": "deny",
        "edit": "deny",
        "task": "deny",
        "read": "allow",
        "glob": "allow",
        "grep": "allow",
        "list": "allow",
        "grep_app_*": "allow",
        "Ripgrep": "allow",
        "lsp": "allow",
        "skill": {
          "using-superpowers": "deny",
          "brainstorming": "deny",
          "subagent-driven-development": "deny",
          "writing-plans": "deny",
          "finishing-a-development-branch": "deny",
          "executing-plans": "deny",
          "verification-before-completion": "deny",
        }
      },
    },
    "librarian": {
      "mode": "subagent",
      "model": "opencode/claude-haiku-4-5",
      "temperature": 0.1,
      "permission": {
        "task": "deny",
        "write": "deny",
        "edit": "deny",
        "skill": {
          "using-superpowers": "deny",
          "brainstorming": "deny",
          "subagent-driven-development": "deny",
          "writing-plans": "deny",
          "finishing-a-development-branch": "deny",
          "executing-plans": "deny",
          "verification-before-completion": "deny",
        }
      },
    },
    "oracle": {
      "mode": "subagent",
      "model": "opencode/gpt-5.2",
      "variant": "xhigh",
      "temperature": 0.1,
      "permission": {
        "write": "deny",
        "edit": "deny",
        "task": "deny",
        "skill": {
          "brainstorming": "deny",
          "subagent-driven-development": "deny",
          "writing-plans": "deny",
          "finishing-a-development-branch": "deny",
          "executing-plans": "deny",
          "test-driven-development": "deny",
        }
      },
    },
    "ui-planner": {
      "mode": "subagent",
      "model": "opencode/gemini-3-pro",
      "temperature": 0.1,
      "permission": {
        "task": "deny",
        "skill": {
          "using-superpowers": "deny",
          "brainstorming": "deny",
          "subagent-driven-development": "deny",
          "writing-plans": "deny",
          "finishing-a-development-branch": "deny",
          "executing-plans": "deny",
          "verification-before-completion": "deny",
        }
      }
    }
  }
}